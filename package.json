{
  "name": "cercalibro-webpack",
  "version": "1.0.0",
  "description": "Applicazione per la ricerca di libri con Webpack e ES6",
  "main": "src/app.js",
  "scripts": {
    "dev": "webpack serve --mode development",
    "build": "NODE_ENV=production webpack --mode production",
    "build:dev": "webpack --mode development",
    "clean": "rimraf dist",
    "preview": "npm run build && serve dist",
    "sass:watch": "sass --watch src/css/:src/css/ --style expanded",
    "sass:build": "sass src/css/:src/css/ --style compressed",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix"
  },
  "keywords": [
    "javascript",
    "books",
    "search",
    "webpack",
    "es6",
    "axios",
    "lodash",
    "sass"
  ],
  "author": "Il tuo nome",
  "license": "MIT",
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.18.6",
    "@babel/plugin-proposal-optional-chaining": "^7.21.0",
    "@babel/preset-env": "^7.23.2",
    "babel-loader": "^9.1.3",
    "clean-webpack-plugin": "^4.0.0",
    "core-js": "^3.33.1",
    "css-loader": "^6.8.1",
    "eslint": "^8.53.0",
    "html-webpack-plugin": "^5.5.3",
    "mini-css-extract-plugin": "^2.7.6",
    "rimraf": "^5.0.5",
    "sass": "^1.93.0",
    "sass-loader": "^16.0.5",
    "serve": "^14.2.1",
    "style-loader": "^3.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "lodash": "^4.17.21"
  }
}
